# Flask Configuration
FLASK_APP=app
FLASK_ENV=development
FLASK_DEBUG=True

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api
SECRET_KEY=vex-u-analysis-secret-key-change-in-production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3002,http://127.0.0.1:3002

# Analysis Engine Configuration
VEX_ANALYSIS_PATH=../vex_u_scoring_analysis
PYTHON_PATH=python3

# WebSocket Configuration
SOCKETIO_ASYNC_MODE=threading

# Redis Configuration (for task queue)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads/
ALLOWED_EXTENSIONS=json,csv,xlsx,txt

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Development Settings
TESTING=False
DEBUG_TB_ENABLED=False